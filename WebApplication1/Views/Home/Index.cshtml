@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center hero-section">
    <h1 class="display-4 mb-4">Welcome to Marketplace</h1>
    <p class="lead mb-5">Find great deals or sell your items</p>

    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <form asp-controller="Products" asp-action="Index" method="get" class="search-form">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Search products..." />
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
        </div>
    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="mt-5">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg mx-2">Get Started</a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg mx-2">Sign In</a>
        </div>
    }
</div>