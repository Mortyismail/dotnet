@model IList<ConversationViewModel>

<div class="container">
    <h2>Messages</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="list-group">
                @foreach (var conversation in Model)
                {
                    <a href="@Url.Action("Conversation", new { userId = conversation.OtherUserId })"
                       class="list-group-item list-group-item-action @(conversation.UnreadCount > 0 ? "active" : "")">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@conversation.OtherUserEmail</h5>
                            <small>@conversation.LastMessageDate.ToString("g")</small>
                        </div>
                        <p class="mb-1">@conversation.LastMessage</p>
                        @if (conversation.UnreadCount > 0)
                        {
                            <span class="badge bg-primary rounded-pill">@conversation.UnreadCount</span>
                        }
                    </a>
                }
            </div>
        </div>
    </div>
</div>